# Para Next.js usa: NEXT_PUBLIC_API_URL=http://localhost:8000
# Para Vite usa: VITE_API_URL=http://localhost:8000

# Configuración del servidor de desarrollo
PORT=3000
HOST=localhost

# Configuración de la aplicación
REACT_APP_NAME=Tareitaz Frontend
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# URLs de servicios externos (si los usas)
